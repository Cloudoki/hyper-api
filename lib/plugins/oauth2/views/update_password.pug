html
  head
    title #{title}
    style
      include css/normalize.css
      include css/skeleton.css
      include css/style.css
  body
    div(class='container panel')
      h4 Set New Password
      form(method='post', action='/recover_password')
        div(class='row')
          label(for='password') New Password
          input(class='u-full-width', type='password', name='password', id='password')
          label(for='password_confirm') Confirm Password
          input(class='u-full-width', type='password', name='password_confirm', id='password_confirm')
          input(type='hidden', name='token', value=token)
          input(class='u-full-width button-primary', type='submit', value='Update')
