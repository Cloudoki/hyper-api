{
    "server": {
        "routes": {
            "cors": {
                "origin": ["*"],
                "additionalHeaders": [
                    "Accept",
                    "Authorization",
                    "Content-Type",
                    "If-None-Match",
                    "Accept-language"
                ]
            }
        }
    },
    "seneca": {
        "options": {
            "timeout": 60000,
            "log": {
                "level": "fatal"
            },
            "debug": {
                "short_logs": true
            }
        },
        "client": {
            "type": "amqp",
            "url": "amqp://localhost:5672/"
        }
    }
}